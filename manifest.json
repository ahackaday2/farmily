{
    "name": "FARMily",
    "description": "Manage your mental health and wellbeing with the help of your farm animal friends!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "options_page": "/options/options.html",
    "action": {
        "default_popup": "/foodwater/foodwater.html",
        "default_icon": {
            "16": "/images/cow.png"
        }
    },
    "icons": {
        "16": "/images/cow.png"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/cow.png",
                "images/sheep.png"
            ],
            "matches": [
                "https://*/*"
            ],
            "use_dynamic_url": true
        }
    ]
}