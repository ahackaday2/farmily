{
    "name": "FARMily",
    "description": "Manage your mental health and wellbeing with the help of your farm animal friends!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/whee.png"
        }
    },
    "icons": {
        "16": "/images/whee.png"
    }
}